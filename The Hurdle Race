#include<iostream>
using namespace std;
int main()
    {
 int k,n;
    int i,j;
    cin>>n>>k;
    int* h=new int[n];
    int max=0;
 for(i=0;i<n;i++)
     {
     cin>>h[i];
     if(h[i]>max)
         max=h[i];
     }
 int dif=max-k;
    if(dif>=0)
        cout<<dif;
    else
        cout<<"0";
    return(0);
}

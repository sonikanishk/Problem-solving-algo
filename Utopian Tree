#include<bits/stdc++.h>
using namespace std;

int main(){
    int q;
    cin>>q;
    for(int i=0;i<q;i++){
        int k;
        cin>> k;
        int h=0;
        for(int i=0;i<=k;i++){
            if(i%2==0){
                h++;
            }
            else{
                h*=2;
            }
        }
        cout<<h<<endl;
    }

    return 0;
}
